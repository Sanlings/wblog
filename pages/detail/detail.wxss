page
{
	width: 100%;
	height:100%;
}

/**基础风格样式**/
@import '/towxml/style/main.wxss'; 

/**主题配色（浅色样式）**/
@import '/towxml/style/theme/light.wxss'; 
.detail-container
{
	width:100%;
	height: 100%;
}
.de-co-scroll
{
    width: 92%;
    height: 100%;
    white-space: nowrap;
	padding: 0 4%;
}
/**
 * 文章详情头部信息
 */
.de-co-header
{
	width:100%;
	height:250rpx;
}

/**
 * 文章标题
 */
.co-he-title
{
	width: 100%;
    height: 100rpx;
    white-space: normal;
	word-wrap: break-word;
    font-size: 34rpx;
    font-weight: 600;
    color: #232323;
}

/**
 * 作者信息/分类标签
 */
.he-au-info
{
    width: 100%;
    color: #9a9a9a;
    font-size: 28rpx;
    line-height: 30rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
    margin-top: 3%; 
}
.he-au-info
image
{
    width: 65rpx;
    height: 65rpx;
    border-radius: 65rpx;
    background: wheat;
}
.au-info-text
text
{
    margin-left: 3%;
    line-height: 65rpx;
}
.au-info-tag
{
    margin-top: 3%;
}
.au-info-tag
.tag
{
    background: #1296db;
    border-radius: 5rpx;
    padding: 0 1%;
    color: #FFFFFF;
}
.au-info-tag
.tag:last-child
{
    /* text-overflow: ellipsis;
    overflow: hidden; */
}
.au-info-text
{
    width: calc(100% - 100rpx);
}

/**
*文章内容
*/
.de-co-body
{
	width: 100%;
    white-space: normal;
    word-break: break-all;
    color: #232323;
    font-size: 30rpx;
    word-spacing: 1rem;
    line-height: 2rem;
}
.nomore-last-item{
    width: 100%;
    color: #9a9a9a;
    font-size: 26rpx;
    text-align: center;
    margin-top: 2%;
}
